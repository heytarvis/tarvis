{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": false,
    "declaration": true,
    "types": ["vite/client"],
    "outDir": "../../dist/types",
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "tests"]
}
